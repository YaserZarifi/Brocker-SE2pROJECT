{
  "annotations": {
    "list": []
  },
  "description": "BourseChain - Online Stock Brokerage Platform Monitoring",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Service Health",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"django-backend\"}",
          "legendFormat": "Backend"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "thresholds": {
            "steps": [
              { "value": null, "color": "red" },
              { "value": 1, "color": "green" }
            ]
          }
        }
      }
    },
    {
      "title": "HTTP Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "rate(django_http_requests_before_middlewares_total[1m])",
          "legendFormat": "Total Requests/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme"
          },
          "unit": "reqps"
        }
      }
    },
    {
      "title": "Active Requests",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "django_http_requests_before_middlewares_total - django_http_responses_before_middlewares_total",
          "legendFormat": "Active"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "value": null, "color": "green" },
              { "value": 50, "color": "yellow" },
              { "value": 100, "color": "red" }
            ]
          },
          "max": 200
        }
      }
    },
    {
      "title": "HTTP Responses by Status Code",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(django_http_responses_total_by_status_total[5m])",
          "legendFormat": "{{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 80,
            "stacking": { "mode": "normal" }
          },
          "unit": "reqps"
        },
        "overrides": [
          { "matcher": { "id": "byRegexp", "options": "2.." }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
          { "matcher": { "id": "byRegexp", "options": "4.." }, "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }] },
          { "matcher": { "id": "byRegexp", "options": "5.." }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "title": "Request Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "s"
        }
      }
    },
    {
      "title": "Requests by HTTP Method",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "increase(django_http_requests_total_by_method_total[1h])",
          "legendFormat": "{{method}}"
        }
      ]
    },
    {
      "title": "Database Query Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 9, "x": 6, "y": 16 },
      "targets": [
        {
          "expr": "rate(django_db_execute_total[5m])",
          "legendFormat": "Queries/s"
        },
        {
          "expr": "rate(django_db_errors_total[5m])",
          "legendFormat": "Errors/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15
          },
          "unit": "ops"
        }
      }
    },
    {
      "title": "Requests by View (Top 10)",
      "type": "table",
      "gridPos": { "h": 8, "w": 9, "x": 15, "y": 16 },
      "targets": [
        {
          "expr": "topk(10, sum by (view) (increase(django_http_requests_total_by_view_transport_method_total[1h])))",
          "legendFormat": "{{view}}",
          "format": "table",
          "instant": true
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["boursechain", "django", "monitoring"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "BourseChain - Platform Overview",
  "uid": "boursechain-overview",
  "version": 1
}
